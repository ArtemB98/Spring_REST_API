<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.example.demo.Entities.Countries">
        <table name="COUNTRIES" schema="HR" catalog=""/>
        <attributes>
            <id name="countryId">
                <column name="COUNTRY_ID" length="2"/>
            </id>
            <basic name="countryName">
                <column name="COUNTRY_NAME" nullable="false" length="40"/>
            </basic>
            <many-to-one name="regionsByRegionId" optional="true" target-entity="com.example.demo.Entities.Regions">
                <join-column name="REGION_ID" nullable="false" referenced-column-name="REGION_ID"/>
            </many-to-one>
            <one-to-many name="locationsByCountryId" mapped-by="countriesByCountryId"
                         target-entity="com.example.demo.Entities.Locations"/>
        </attributes>
    </entity>
</entity-mappings>
