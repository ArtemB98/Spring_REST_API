<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.example.demo.Entities.Employees">
        <table name="EMPLOYEES" schema="HR" catalog=""/>
        <attributes>
            <id name="employeeId">
                <column name="EMPLOYEE_ID" precision="6"/>
            </id>
            <basic name="firstName">
                <column name="FIRST_NAME" nullable="false" length="20"/>
            </basic>
            <basic name="lastName">
                <column name="LAST_NAME" length="25"/>
            </basic>
            <basic name="email">
                <column name="EMAIL" length="25"/>
            </basic>
            <basic name="phoneNumber">
                <column name="PHONE_NUMBER" nullable="false" length="20"/>
            </basic>
            <basic name="hireDate">
                <column name="HIRE_DATE" precision="-1"/>
            </basic>
            <basic name="salary">
                <column name="SALARY" nullable="false" precision="2"/>
            </basic>
            <basic name="commissionPct">
                <column name="COMMISSION_PCT" nullable="false" precision="2"/>
            </basic>
            <many-to-one name="jobsByJobId" optional="true" target-entity="com.example.demo.Entities.Jobs">
                <join-column name="JOB_ID" referenced-column-name="JOB_ID"/>
            </many-to-one>
            <many-to-one name="employeesByManagerId" optional="true" target-entity="com.example.demo.Entities.Employees">
                <join-column name="MANAGER_ID" nullable="false" referenced-column-name="EMPLOYEE_ID"/>
            </many-to-one>
            <many-to-one name="departmentsByDepartmentId" optional="true" target-entity="com.example.demo.Entities.Departments">
                <join-column name="DEPARTMENT_ID" nullable="false" referenced-column-name="DEPARTMENT_ID"/>
            </many-to-one>
            <one-to-many name="departmentsByEmployeeId" mapped-by="employeesByManagerId"
                         target-entity="com.example.demo.Entities.Departments"/>
            <one-to-many name="employeesByEmployeeId" mapped-by="employeesByManagerId"
                         target-entity="com.example.demo.Entities.Employees"/>
            <one-to-many name="jobHistoriesByEmployeeId" mapped-by="employeesByEmployeeId"
                         target-entity="com.example.demo.Entities.JobHistory"/>
        </attributes>
    </entity>
</entity-mappings>
