<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.example.demo.Entities.Department">
        <table name="DEPARTMENTS" schema="HR" catalog=""/>
        <attributes>
            <id name="departmentId">
                <column name="DEPARTMENT_ID" precision="4"/>
            </id>
            <basic name="departmentName">
                <column name="DEPARTMENT_NAME" length="30"/>
            </basic>
            <many-to-one name="employeeByManagerId" optional="true" target-entity="com.example.demo.Entities.Employee">
                <join-column name="MANAGER_ID" nullable="false" referenced-column-name="EMPLOYEE_ID"/>
            </many-to-one>
            <many-to-one name="locationByLocationId" optional="true" target-entity="com.example.demo.Entities.Location">
                <join-column name="LOCATION_ID" nullable="false" referenced-column-name="LOCATION_ID"/>
            </many-to-one>
            <one-to-many name="employeeByDepartmentId" mapped-by="departmentByDepartmentId"
                         target-entity="com.example.demo.Entities.Employee"/>
            <one-to-many name="jobHistoriesByDepartmentId" mapped-by="departmentByDepartmentId"
                         target-entity="com.example.demo.Entities.JobHistory"/>
        </attributes>
    </entity>
</entity-mappings>
